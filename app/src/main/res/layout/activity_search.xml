<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SearchActivity">

    <LinearLayout
        android:id="@+id/searchTopBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back"
            android:padding="4dp"
            android:src="@drawable/ic_arrow_back" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/color_gray"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/search"
                    android:src="@drawable/ic_search" />

                <EditText
                    android:id="@+id/et_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="@string/search_homes"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textColorHint="@color/text_secondary"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/btn_voice_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Voice Search"
                    android:padding="4dp"
                    android:src="@drawable/ic_voice" />

                <ImageView
                    android:id="@+id/btn_clear"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="2dp"
                    android:src="@drawable/ic_cancel"
                    android:visibility="gone"
                    app:tint="@color/text_secondary" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/search"
            android:textColor="@color/red"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTopBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_suggestions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!--Recent search -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tìm kiếm gần đây"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_clear_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp"
                            android:text="Xóa tất cả"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_recent_searches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="5"
                        tools:listitem="@layout/search_history_item" />

                </LinearLayout>

                <!-- Quick Categories -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/gray_light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Danh mục"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <GridLayout
                        android:id="@+id/stat_card_grid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="24dp"
                        android:columnCount="2"
                        android:rowCount="2"
                        android:useDefaultMargins="false"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Appointment Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_appointment"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:text="@string/appointment"
                            android:textColor="#1976D2"
                            android:textSize="13sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="#E3F2FD"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/calendar_date"
                            app:iconTint="#1976D2"
                            app:iconSize="24dp"
                            app:iconGravity="start"
                            app:iconPadding="8dp"
                            app:strokeColor="#BBDEFB"
                            app:strokeWidth="1dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <!-- Notes Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_notes"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:text="@string/notes"
                            android:textColor="#7B1FA2"
                            android:textSize="13sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="#F3E5F5"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_note"
                            app:iconTint="#7B1FA2"
                            app:iconSize="24dp"
                            app:iconGravity="start"
                            app:iconPadding="8dp"
                            app:strokeColor="#E1BEE7"
                            app:strokeWidth="1dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <!-- Contacts Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_contact"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:text="@string/contact"
                            android:textColor="#388E3C"
                            android:textSize="13sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="#E8F5E8"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_contact"
                            app:iconTint="#388E3C"
                            app:iconSize="24dp"
                            app:iconGravity="start"
                            app:iconPadding="8dp"
                            app:strokeColor="#C8E6C9"
                            app:strokeWidth="1dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <!-- History Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_history"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_rowWeight="1"
                            android:layout_columnWeight="1"
                            android:layout_margin="8dp"
                            android:text="@string/history"
                            android:textColor="#F57C00"
                            android:textSize="13sp"
                            android:fontFamily="@font/quicksand_medium"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="#FFF3E0"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_history"
                            app:iconTint="#F57C00"
                            app:iconSize="24dp"
                            app:iconGravity="start"
                            app:iconPadding="8dp"
                            app:strokeColor="#FFE0B2"
                            app:strokeWidth="1dp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                    </GridLayout>
                </LinearLayout>
            </LinearLayout>

            <!--Search results-->
            <LinearLayout
                android:id="@+id/layout_search_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <!-- Search Filter Tabs -->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_search_filters"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@android:color/white"
                    app:tabGravity="start"
                    app:tabMode="scrollable"
                    app:tabIndicatorColor="@color/primary_color"
                    app:tabIndicatorHeight="3dp"
                    app:tabSelectedTextColor="@color/primary_color"
                    app:tabTextColor="@color/text_secondary"
                    app:tabRippleColor="@android:color/transparent" />

                <!-- Search Results List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_search_results"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="8dp"
                    tools:itemCount="10"
                    />
            </LinearLayout>

            <!-- No Results Layout -->
            <LinearLayout
                android:id="@+id/layout_no_results"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_search_empty"
                    app:tint="@color/text_secondary"
                    android:alpha="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Không tìm thấy kết quả"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Hãy thử tìm kiếm với từ khóa khác"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>