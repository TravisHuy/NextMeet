<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    app:cardCornerRadius="24dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/color_white"
    app:strokeColor="?colorOutlineVariant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row: Avatar + Info -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name_short"
                android:layout_width="48dp"
                android:layout_height="48dp"
                tools:text="NH"
                android:textColor="@color/white"
                android:background="@drawable/bg_circle"
                android:gravity="center"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="20sp"
                android:includeFontPadding="false"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/contact_name"
                    tools:text="Nguyễn Văn An"
                    android:fontFamily="@font/inter_bold"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:textColor="?colorOnSurface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/contact_role"
                    tools:text="CEO - Công ty ABC"
                    android:fontFamily="@font/open_sans"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?colorOnSurfaceVariant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp">

                    <ImageView
                        android:src="@drawable/ic_phone"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:tint="@color/color_red"/>

                    <TextView
                        android:id="@+id/contact_phone"
                        tools:text="0123-456-789"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?colorOnSurface"
                        android:paddingStart="4dp"
                        android:fontFamily="@font/open_sans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_favorite_heart"
                android:visibility="visible"
                android:layout_gravity="top"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Row: Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_call"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/call"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_phone"
                app:iconTint="@color/white"
                app:iconPadding="8dp"
                app:iconGravity="textStart"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@color/light_primary"
                />


            <Button
                android:id="@+id/btn_appointment"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="@string/meet"
                android:textColor="@color/white"
                app:cornerRadius="8dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:icon="@drawable/ic_appointment"
                app:iconTint="@color/white"
                app:iconPadding="8dp"
                app:iconGravity="start"
                android:backgroundTint="@color/light_primary"
                />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

